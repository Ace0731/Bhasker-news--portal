@model ShineTheWorld.Models.CareerViewModel

@{
    ViewData["Title"] = "Careers - Join Our Team";
}

<!-- Career Hero Section -->
<div class="career-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Join Our Mission</h1>
                <p class="lead mb-4">
                    Be part of a team that's shaping the future of journalism. At Shine The World, 
                    we're committed to delivering truth, fostering transparency, and building trust 
                    with our readers worldwide.
                </p>
                <div class="d-flex gap-3">
                    <a href="#open-positions" class="btn btn-primary btn-lg">
                        <i class="fas fa-briefcase me-2"></i>View Open Positions
                    </a>
                    <a href="#company-culture" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-users me-2"></i>Our Culture
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="career-image">
                    <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Team collaboration" class="img-fluid rounded-3 shadow-lg">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Company Culture Section -->
<section id="company-culture" class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="display-5 fw-bold mb-4">Why Work With Us?</h2>
                <p class="lead">We believe in creating an environment where talent thrives and innovation flourishes.</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="culture-card">
                    <div class="culture-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <h4>Innovation First</h4>
                    <p>We embrace new technologies and creative approaches to storytelling, keeping us at the forefront of digital journalism.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="culture-card">
                    <div class="culture-icon">
                        <i class="fas fa-balance-scale"></i>
                    </div>
                    <h4>Work-Life Balance</h4>
                    <p>We understand the importance of personal well-being and offer flexible working arrangements to support our team.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="culture-card">
                    <div class="culture-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h4>Continuous Learning</h4>
                    <p>Invest in your growth with our learning and development programs, conferences, and skill-building opportunities.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Open Positions Section -->
<section id="open-positions" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="display-5 fw-bold mb-4">Open Positions</h2>
                <p class="lead">Discover exciting opportunities to grow your career with us.</p>
            </div>
        </div>
        
        @if (Model.OpenPositions.Any())
        {
            <div class="row g-4">
                @foreach (var position in Model.OpenPositions)
                {
                    <div class="col-lg-6">
                        <div class="job-card">
                            <div class="job-header">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h4 class="job-title">@position.Title</h4>
                                        <div class="job-meta">
                                            <span class="badge bg-primary me-2">@position.Department</span>
                                            <span class="text-muted">
                                                <i class="fas fa-map-marker-alt me-1"></i>@position.Location
                                            </span>
                                        </div>
                                    </div>
                                    <span class="job-type-badge">@position.Type</span>
                                </div>
                            </div>
                            
                            <div class="job-content">
                                <p class="job-description">@position.Description</p>
                                
                                <div class="job-requirements mb-3">
                                    <h6>Key Requirements:</h6>
                                    <ul class="requirements-list">
                                        @foreach (var req in position.Requirements.Take(3))
                                        {
                                            <li>@req</li>
                                        }
                                        @if (position.Requirements.Count > 3)
                                        {
                                            <li class="text-muted">+@(position.Requirements.Count - 3) more...</li>
                                        }
                                    </ul>
                                </div>
                                
                                <div class="job-footer">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="salary-info">
                                            <strong class="text-success">@position.SalaryRange</strong>
                                        </div>
                                        <div class="job-actions">
                                            <a href="@Url.Action("Position", new { id = position.Id })" 
                                               class="btn btn-outline-primary btn-sm me-2">
                                                <i class="fas fa-eye me-1"></i>View Details
                                            </a>
                                            <a href="@Url.Action("Apply", new { positionId = position.Id })" 
                                               class="btn btn-primary btn-sm">
                                                <i class="fas fa-paper-plane me-1"></i>Apply Now
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-briefcase fa-3x text-muted mb-3"></i>
                <h4>No Open Positions</h4>
                <p class="text-muted">We don't have any open positions at the moment, but we're always looking for talented individuals. Feel free to send us your resume!</p>
                <a href="@Url.Action("Apply")" class="btn btn-primary">
                    <i class="fas fa-paper-plane me-2"></i>Send Resume
                </a>
            </div>
        }
    </div>
</section>

<!-- Benefits Section -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="display-5 fw-bold mb-4">Employee Benefits</h2>
                <p class="lead">We take care of our team with comprehensive benefits and perks.</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-3 col-sm-6">
                <div class="benefit-item text-center">
                    <i class="fas fa-heartbeat fa-2x mb-3"></i>
                    <h5>Health Insurance</h5>
                    <p>Comprehensive medical coverage for you and your family</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="benefit-item text-center">
                    <i class="fas fa-plane fa-2x mb-3"></i>
                    <h5>Paid Time Off</h5>
                    <p>Generous vacation days and flexible leave policies</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="benefit-item text-center">
                    <i class="fas fa-laptop fa-2x mb-3"></i>
                    <h5>Remote Work</h5>
                    <p>Flexible work arrangements and modern equipment</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="benefit-item text-center">
                    <i class="fas fa-chart-line fa-2x mb-3"></i>
                    <h5>Career Growth</h5>
                    <p>Professional development and advancement opportunities</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
}