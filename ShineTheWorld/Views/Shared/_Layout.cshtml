@{
    var isAuth = Context.User?.Identity?.IsAuthenticated == true;
    var email = isAuth ? Context.User?.Identity?.Name : null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Shine The World - Latest News & Updates</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700;900&family=Open+Sans:wght@300;400;600;700&family=Playfair+Display:wght@400;700;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center gap-3">
                        <span class="date-time">
                            <i class="fas fa-calendar-alt me-1"></i>
                            @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
                        </span>
                        <span class="weather">
                            <i class="fas fa-cloud-sun me-1"></i>
                            New Delhi 28°C
                        </span>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <header class="main-header">
        <div class="container">
            <div class="row align-items-center py-3">
                <div class="col-md-3">
                    <div class="logo">
                        <a href="/">
                            <h1 class="mb-0">Shine <span class="text-primary">The World</span></h1>
                            <small class="tagline">Truth. Trust. Transparency.</small>
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="search-bar">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search news, topics, people...">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-end">
                    <div class="user-actions">
                        @if (!isAuth)
                        {
                            <a class="btn btn-outline-primary me-2" href="/Account/Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                            <a class="btn btn-primary" href="/Account/Register">
                                <i class="fas fa-user-plus me-1"></i>Subscribe
                            </a>
                        }
                        else
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>@email
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Subscription/Plans">
                                        <i class="fas fa-crown me-2"></i>Subscription
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="/Account/Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a></li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="main-nav">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="nav-content d-flex align-items-center">
                        <!-- Main Navigation Links -->
                        @* <ul class="nav-menu-simple d-flex align-items-center mb-0">
                            <li><a href="/" class="nav-link"><i class="fas fa-home me-1"></i>Home</a></li>
                            <li><a href="/Career" class="nav-link"><i class="fas fa-briefcase me-1"></i>Careers</a></li>
                            <li><a href="/Subscription/Plans" class="nav-link"><i class="fas fa-crown me-1"></i>Subscribe</a></li>
                        </ul> *@
                        
                        <!-- Breaking News - Full Width -->
                        <div class="breaking-news-full flex-grow-1 ms-4">
                            <div class="d-flex align-items-center">
                                <span class="breaking-badge me-3">BREAKING</span>
                                <div class="breaking-content">
                                    <marquee behavior="scroll" direction="left" scrollamount="3">
                                        🔥 EXCLUSIVE: Government announces major climate initiative worth $500 billion • 
                                        📈 Stock markets hit all-time high amid economic optimism • 
                                        ⚽ World Cup Final ends in dramatic penalty shootout • 
                                        🚀 Mars mission successfully lands, begins scientific operations • 
                                        💊 Medical breakthrough offers hope for rare disease patients
                                    </marquee>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="main-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="footer-section">
                        <h5>Shine The World</h5>
                        <p>Your trusted source for news, analysis, and insights from around the globe.</p>
                        <div class="social-links">
                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="#"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="footer-section">
                        <h6>Sections</h6>
                        <ul class="footer-links">
                            <li><a href="/?category=India">India</a></li>
                            <li><a href="/?category=World">World</a></li>
                            <li><a href="/?category=Business">Business</a></li>
                            <li><a href="/?category=Sports">Sports</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="footer-section">
                        <h6>More</h6>
                        <ul class="footer-links">
                            <li><a href="/?category=Entertainment">Entertainment</a></li>
                            <li><a href="/?category=Technology">Technology</a></li>
                            <li><a href="/?category=Health">Health</a></li>
                            <li><a href="/?category=Lifestyle">Lifestyle</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="footer-section">
                        <h6>Company</h6>
                        <ul class="footer-links">
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">Contact</a></li>
                            <li><a href="/Career">Careers</a></li>
                            <li><a href="#">Advertise</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="footer-section">
                        <h6>Newsletter</h6>
                        <p>Get the latest news delivered to your inbox</p>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your email">
                            <button class="btn btn-primary" type="button">Subscribe</button>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">© @DateTime.UtcNow.Year Shine The World. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-end">
                    <div class="footer-legal">
                        <a href="#">Privacy Policy</a>
                        <a href="#">Terms of Service</a>
                        <a href="#">Cookie Policy</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
