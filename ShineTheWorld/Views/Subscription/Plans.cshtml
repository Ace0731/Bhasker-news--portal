@{
    ViewData["Title"] = "Subscription Plans";
    var userEmail = User.Identity?.Name;
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold mb-3">Choose Your Plan</h1>
                <p class="lead text-muted">Get unlimited access to premium content and support quality journalism</p>
            </div>

            <!-- Current Subscription Status -->
            @if (User.Identity?.IsAuthenticated == true && userEmail != null)
            {
                @inject ShineTheWorld.Services.IUserService UserService
                var isSubscribed = UserService.IsSubscribed(userEmail);
                var subscriptionExpiry = UserService.SubscriptionExpiry(userEmail);
                
                @if (isSubscribed)
                {
                    <div class="alert alert-success text-center mb-5">
                        <i class="fas fa-crown me-2"></i>
                        <strong>You're subscribed!</strong> 
                        @if (subscriptionExpiry.HasValue)
                        {
                            <span>Your subscription expires on @subscriptionExpiry.Value.ToString("MMMM dd, yyyy")</span>
                        }
                        else
                        {
                            <span>You have a lifetime subscription</span>
                        }
                    </div>
                }
            }

            <!-- Pricing Plans -->
            <div class="row g-4 mb-5">
                <!-- Monthly Plan -->
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <h5 class="card-title fw-bold">Monthly</h5>
                            <div class="price-display mb-3">
                                <span class="display-6 fw-bold text-primary">₹99</span>
                                <small class="text-muted">/month</small>
                            </div>
                            <ul class="list-unstyled mb-4">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Unlimited premium articles</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Ad-free experience</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Mobile app access</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Email newsletters</li>
                            </ul>
                            <div class="payment-section">
                                <div class="qr-placeholder mb-3 p-3 bg-light rounded">
                                    <i class="fas fa-qrcode fa-3x text-muted mb-2"></i>
                                    <p class="small text-muted mb-0">Scan QR code to pay ₹99</p>
                                    <small class="text-muted">UPI: pay@shinetheworld.com</small>
                                </div>
                                <form method="post" action="/Subscription/Activate">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="plan" value="Monthly" />
                                    <button class="btn btn-primary w-100">I've Paid - Activate</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quarterly Plan -->
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <h5 class="card-title fw-bold">Quarterly</h5>
                            <div class="price-display mb-3">
                                <span class="display-6 fw-bold text-primary">₹249</span>
                                <small class="text-muted">/3 months</small>
                                <div class="badge bg-success mt-1">Save 16%</div>
                            </div>
                            <ul class="list-unstyled mb-4">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Unlimited premium articles</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Ad-free experience</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Mobile app access</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Email newsletters</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Priority support</li>
                            </ul>
                            <div class="payment-section">
                                <div class="qr-placeholder mb-3 p-3 bg-light rounded">
                                    <i class="fas fa-qrcode fa-3x text-muted mb-2"></i>
                                    <p class="small text-muted mb-0">Scan QR code to pay ₹249</p>
                                    <small class="text-muted">UPI: pay@shinetheworld.com</small>
                                </div>
                                <form method="post" action="/Subscription/Activate">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="plan" value="Quarterly" />
                                    <button class="btn btn-primary w-100">I've Paid - Activate</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Yearly Plan - Most Popular -->
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100 shadow border-primary position-relative">
                        <div class="position-absolute top-0 start-50 translate-middle">
                            <span class="badge bg-primary px-3 py-2">Most Popular</span>
                        </div>
                        <div class="card-body text-center p-4 pt-5">
                            <h5 class="card-title fw-bold">Yearly</h5>
                            <div class="price-display mb-3">
                                <span class="display-6 fw-bold text-primary">₹799</span>
                                <small class="text-muted">/year</small>
                                <div class="badge bg-success mt-1">Save 33%</div>
                            </div>
                            <ul class="list-unstyled mb-4">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Unlimited premium articles</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Ad-free experience</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Mobile app access</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Email newsletters</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Priority support</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Exclusive content</li>
                            </ul>
                            <div class="payment-section">
                                <div class="qr-placeholder mb-3 p-3 bg-light rounded">
                                    <i class="fas fa-qrcode fa-3x text-muted mb-2"></i>
                                    <p class="small text-muted mb-0">Scan QR code to pay ₹799</p>
                                    <small class="text-muted">UPI: pay@shinetheworld.com</small>
                                </div>
                                <form method="post" action="/Subscription/Activate">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="plan" value="Yearly" />
                                    <button class="btn btn-primary w-100">I've Paid - Activate</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lifetime Plan -->
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <h5 class="card-title fw-bold">Lifetime</h5>
                            <div class="price-display mb-3">
                                <span class="display-6 fw-bold text-primary">₹2,999</span>
                                <small class="text-muted">one-time</small>
                                <div class="badge bg-warning text-dark mt-1">Best Value</div>
                            </div>
                            <ul class="list-unstyled mb-4">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Unlimited premium articles</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Ad-free experience</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Mobile app access</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Email newsletters</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Priority support</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Exclusive content</li>
                                <li class="mb-2"><i class="fas fa-crown text-warning me-2"></i>Lifetime access</li>
                            </ul>
                            <div class="payment-section">
                                <div class="qr-placeholder mb-3 p-3 bg-light rounded">
                                    <i class="fas fa-qrcode fa-3x text-muted mb-2"></i>
                                    <p class="small text-muted mb-0">Scan QR code to pay ₹2,999</p>
                                    <small class="text-muted">UPI: pay@shinetheworld.com</small>
                                </div>
                                <form method="post" action="/Subscription/Activate">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="plan" value="Lifetime" />
                                    <button class="btn btn-warning w-100 text-dark fw-bold">I've Paid - Activate</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h3 class="text-center mb-4">Frequently Asked Questions</h3>
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    What's included in the subscription?
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Your subscription includes unlimited access to all premium articles, an ad-free reading experience, mobile app access, and exclusive newsletters.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    How do I activate my subscription after payment?
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    After making the payment via UPI, simply click the "I've Paid - Activate" button. Your subscription will be activated immediately.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                    Can I cancel my subscription?
                                </button>
                            </h2>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Yes, you can cancel your subscription at any time. You'll continue to have access until the end of your current billing period.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.qr-placeholder {
    min-height: 120px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.price-display {
    position: relative;
}

.card.border-primary {
    border-width: 2px !important;
}
</style>